<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Camera Middle Block -->

    <!-- Top Icons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="#28000000"
        android:orientation="vertical">

        <!-- Top Icons: Cancel, Brightness, Timer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <!-- Cancel Button -->

            <!-- Brightness Button -->

            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon1" />

            <ImageButton
                android:id="@+id/brightnessButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="80dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon2" />

            <!-- Timer Button -->
            <ImageButton
                android:id="@+id/timerButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon3" />

        </LinearLayout>

        <!-- Add your camera preview here -->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Gallery, Photo Click, Switch Camera Icons -->

        <!-- Photo and Video buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="400dp"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <!-- Gallery Button -->
            <ImageButton
                android:id="@+id/galleryButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:layout_marginStart="40dp"
                android:src="@drawable/camera_icon4" />

            <!-- Photo Click Button -->

            <!-- Switch Camera Button -->
            <ImageButton
                android:id="@+id/clickButton"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:src="@drawable/camera_icon5" />

            <ImageButton
                android:id="@+id/switchButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <!-- Photo Button -->

            <!-- Video Button -->
            <Button
                android:id="@+id/switchPhotoButton"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="#FF9800"
                android:text="Photo"
                android:textSize="17dp" />

            <Button
                android:id="@+id/switchVideoButton"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/white"
                android:text="Video"
                android:textColor="@color/black"
                android:textSize="17dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>